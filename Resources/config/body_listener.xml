<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="represent.normalizer.camel_keys.class">Mbright\Bundle\RepresentBundle\Normalizer\CamelKeysNormalizer</parameter>
        <parameter key="represent.decoder.json.class">Mbright\Bundle\RepresentBundle\Decoder\JsonDecoder</parameter>
        <parameter key="represent.decoder.jsontoform.class">Mbright\Bundle\RepresentBundle\Decoder\JsonToFormDecoder</parameter>
        <parameter key="represent.decoder.xml.class">Mbright\Bundle\RepresentBundle\Decoder\XmlDecoder</parameter>
        <parameter key="represent.decoder_provider.class">Mbright\Bundle\RepresentBundle\Decoder\ContainerDecoderProvider</parameter>
        <parameter key="represent.body_listener.class">Mbright\Bundle\RepresentBundle\EventListener\BodyListener</parameter>

    </parameters>

    <services>

        <service id="represent.normalizer.camel_keys" class="%represent.normalizer.camel_keys.class%" />

        <service id="represent.decoder.json" class="%represent.decoder.json.class%" />

        <service id="represent.decoder.jsontoform" class="%represent.decoder.jsontoform.class%" />

        <service id="represent.decoder.xml" class="%represent.decoder.xml.class%" />

        <service id="represent.decoder_provider" class="%represent.decoder_provider.class%">
            <argument>%mbright_represent.decoders%</argument>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="represent.body_listener" class="%represent.body_listener.class%">
            <tag name="kernel.event_listener" event="kernel.request" method="onKernelRequest" priority="10" />
            <argument type="service" id="represent.decoder_provider" />
            <argument>%mbright_represent.throw_exception_on_unsupported_content_type%</argument>
            <call method="setDefaultFormat">
                <argument>%mbright_represent.body_default_format%</argument>
            </call>
        </service>

    </services>
</container>